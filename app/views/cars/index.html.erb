<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table class="table">
  <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Mileage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.mileage %></td>
        <td><%= link_to 'Show', car, class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Edit', edit_car_path(car), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Delete', car, class: "btn btn-danger btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Car', new_car_path, class: "btn btn-primary btn-sm" %>
